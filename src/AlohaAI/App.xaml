<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:AlohaAI"
             xmlns:converters="clr-namespace:AlohaAI.Converters"
             x:Class="AlohaAI.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter" />
            <converters:InvertedBoolConverter x:Key="InverseBoolConverter" />
            <converters:ProgressToWidthConverter x:Key="ProgressToWidthConverter" />
            <converters:BoolToHorizontalOptionsConverter x:Key="BoolToHorizontalOptionsConverter" />
            <converters:UserMessageColorConverter x:Key="UserMessageColorConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
