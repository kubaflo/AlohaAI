<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AlohaAI.ViewModels"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             x:Class="AlohaAI.Views.PathsPage"
             x:DataType="vm:PathsViewModel"
             Title="Learning Paths"
             Shell.NavBarIsVisible="False"
             ios:Page.SafeAreaEdges="None">
    <Grid>
        <!-- Layer 0: Sunset Gradient Background -->
        <BoxView InputTransparent="True">
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="#080510" Offset="0.0" />
                    <GradientStop Color="#1B0D3D" Offset="0.25" />
                    <GradientStop Color="#3A1D7A" Offset="0.50" />
                    <GradientStop Color="#6B3FA0" Offset="0.70" />
                    <GradientStop Color="#B85A6A" Offset="0.85" />
                    <GradientStop Color="#E8734F" Offset="1.0" />
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>

        <!-- Layer 1: Ambient Orbs -->
        <Border HorizontalOptions="End" VerticalOptions="Start"
                TranslationX="60" TranslationY="100"
                HeightRequest="300" WidthRequest="300"
                StrokeThickness="0" Stroke="Transparent" InputTransparent="True">
            <Border.StrokeShape><RoundRectangle CornerRadius="150" /></Border.StrokeShape>
            <Border.Background>
                <RadialGradientBrush Center="0.5,0.5" Radius="0.5">
                    <GradientStop Color="#505B9FE6" Offset="0" />
                    <GradientStop Color="#105B9FE6" Offset="0.6" />
                    <GradientStop Color="Transparent" Offset="1" />
                </RadialGradientBrush>
            </Border.Background>
        </Border>
        <Border HorizontalOptions="Start" VerticalOptions="End"
                TranslationX="-80" TranslationY="-100"
                HeightRequest="250" WidthRequest="250"
                StrokeThickness="0" Stroke="Transparent" InputTransparent="True">
            <Border.StrokeShape><RoundRectangle CornerRadius="125" /></Border.StrokeShape>
            <Border.Background>
                <RadialGradientBrush Center="0.5,0.5" Radius="0.5">
                    <GradientStop Color="#40F5A623" Offset="0" />
                    <GradientStop Color="#10F5A623" Offset="0.6" />
                    <GradientStop Color="Transparent" Offset="1" />
                </RadialGradientBrush>
            </Border.Background>
        </Border>

        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}"
                           HorizontalOptions="Center" VerticalOptions="Center"
                           Color="{StaticResource Primary}" ZIndex="99" />

    <ScrollView>
        <VerticalStackLayout x:Name="MainContent" Padding="20,70,20,20" Spacing="16">
            <Label Text="Learning Paths"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="White"
                   Margin="0,50,0,4" />
            <Label Text="Choose a path to start learning"
                   FontSize="14"
                   TextColor="{StaticResource Gray300}"
                   Margin="0,0,0,8" />

            <CollectionView ItemsSource="{Binding Paths}" SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="16" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="vm:PathDisplayItem">
                        <Border Style="{StaticResource GlassCard}">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:PathsViewModel}}, Path=SelectPathCommand}"
                                    CommandParameter="{Binding Id}" />
                            </Border.GestureRecognizers>
                            <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="12">
                                <!-- Title Row -->
                                <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                    <Border BackgroundColor="{Binding Color}"
                                            StrokeShape="RoundRectangle 12"
                                            Stroke="Transparent"
                                            WidthRequest="48" HeightRequest="48">
                                        <Border.Shadow>
                                            <Shadow Brush="{Binding Color}" Offset="0,4" Radius="12" Opacity="0.5" />
                                        </Border.Shadow>
                                        <Image Source="{Binding IconImage}" WidthRequest="32" HeightRequest="32"
                                               HorizontalOptions="Center" VerticalOptions="Center" />
                                    </Border>
                                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="2">
                                        <Label Text="{Binding Title}" FontSize="18" FontAttributes="Bold" TextColor="White" />
                                        <Label Text="{Binding Description}" FontSize="12" TextColor="{StaticResource Gray300}"
                                               MaxLines="2" LineBreakMode="TailTruncation" />
                                    </VerticalStackLayout>
                                    <Label Grid.Column="2" Text="→" FontSize="20" TextColor="{StaticResource Gray400}" VerticalOptions="Center" />
                                </Grid>

                                <!-- Info Row -->
                                <HorizontalStackLayout Grid.Row="1" Spacing="16">
                                    <HorizontalStackLayout Spacing="4">
                                        <Image Source="icon_books.png" WidthRequest="14" HeightRequest="14" VerticalOptions="Center" />
                                        <Label Text="{Binding ModuleCount, StringFormat='{0} modules'}" FontSize="12" TextColor="{StaticResource Gray300}" />
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout Spacing="4">
                                        <Image Source="icon_clock.png" WidthRequest="14" HeightRequest="14" VerticalOptions="Center" />
                                        <Label Text="{Binding EstimatedHours, StringFormat='~{0}h'}" FontSize="12" TextColor="{StaticResource Gray300}" />
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout Spacing="4">
                                        <Label Text="✓" FontSize="12" TextColor="{StaticResource SuccessColor}" FontAttributes="Bold" />
                                        <Label Text="{Binding ProgressText}" FontSize="12" TextColor="{StaticResource Gray300}" />
                                    </HorizontalStackLayout>
                                </HorizontalStackLayout>

                                <!-- Progress Bar -->
                                <Grid Grid.Row="2" HeightRequest="6">
                                    <Border BackgroundColor="#20FFFFFF"
                                            StrokeShape="RoundRectangle 3"
                                            Stroke="Transparent" />
                                    <Border BackgroundColor="{Binding Color}"
                                            StrokeShape="RoundRectangle 3"
                                            Stroke="Transparent"
                                            HorizontalOptions="Start"
                                            WidthRequest="{Binding Progress, Converter={StaticResource ProgressToWidthConverter}, ConverterParameter=300}">
                                        <Border.Shadow>
                                            <Shadow Brush="{Binding Color}" Offset="0,0" Radius="6" Opacity="0.6" />
                                        </Border.Shadow>
                                    </Border>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
    </Grid>
</ContentPage>
