<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AlohaAI.ViewModels"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             x:Class="AlohaAI.Views.HomePage"
             x:DataType="vm:HomeViewModel"
             Title="Home"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#120C24"
             SafeAreaEdges="None">
    <Grid Margin="0,-60,0,0" BackgroundColor="Transparent" SafeAreaEdges="None">
        <BoxView InputTransparent="True">
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#1E1035" Offset="0.0" />
                    <GradientStop Color="#120C24" Offset="1.0" />
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>
        <Grid HeightRequest="380" VerticalOptions="Start" InputTransparent="True">
            <Image Source="bg_sunset.png" Aspect="AspectFill" />
            <BoxView>
                <BoxView.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#00000000" Offset="0.0" />
                        <GradientStop Color="#901E1035" Offset="0.5" />
                        <GradientStop Color="#FF120C24" Offset="1.0" />
                    </LinearGradientBrush>
                </BoxView.Background>
            </BoxView>
        </Grid>

        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}"
                           HorizontalOptions="Center" VerticalOptions="Center"
                           Color="{StaticResource Primary}" ZIndex="99" />
    <ScrollView>
        <VerticalStackLayout x:Name="MainContent" Spacing="0" Padding="0,70,0,0" SafeAreaEdges="None">

            <!-- Header: Settings gear (top right) -->
            <Grid Padding="24,0,24,0" ColumnDefinitions="*,Auto" SafeAreaEdges="None">
                <BoxView Color="Transparent" />
                <Border Grid.Column="1" BackgroundColor="#D01A1035" StrokeShape="RoundRectangle 14"
                        Stroke="Transparent" WidthRequest="40" HeightRequest="40">
                    <Border.Shadow>
                        <Shadow Brush="#000000" Offset="0,2" Radius="8" Opacity="0.3" />
                    </Border.Shadow>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding NavigateToSettingsCommand}" />
                    </Border.GestureRecognizers>
                    <Image Source="icon_settings.png" WidthRequest="22" HeightRequest="22"
                           HorizontalOptions="Center" VerticalOptions="Center" Opacity="0.9" />
                </Border>
            </Grid>

            <!-- AlohaAI Logo -->
            <Image Source="logo_alohaai.png" HeightRequest="40"
                   Aspect="AspectFit" HorizontalOptions="Center"
                   Margin="0,8,0,8" />

            <!-- Welcome text -->
            <Label Text="Aloha! Welcome back!"
                   FontSize="24"
                   FontFamily="OpenSansSemibold"
                   TextColor="#DDFFFFFF"
                   HorizontalTextAlignment="Center"
                   Padding="24,0,24,36">
                <Label.Shadow>
                    <Shadow Brush="#40000000" Offset="0,1" Radius="4" Opacity="0.4" />
                </Label.Shadow>
            </Label>

            <!-- Quick Stats — compact inline bar -->
            <Border Margin="16,0,16,16" StrokeShape="RoundRectangle 14"
                    BackgroundColor="#CC151025" Stroke="Transparent" Padding="14,12">
                <Grid ColumnDefinitions="*,Auto,*,Auto,*">
                    <HorizontalStackLayout Spacing="6" HorizontalOptions="Center">
                        <Label Text="{Binding CurrentStreak}" FontSize="20" FontAttributes="Bold" TextColor="White" VerticalOptions="Center" />
                        <Label Text="streak" FontSize="11" TextColor="#B8A0E0" VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    <BoxView Grid.Column="1" WidthRequest="1" BackgroundColor="#40FFFFFF" VerticalOptions="Fill" />
                    <HorizontalStackLayout Grid.Column="2" Spacing="6" HorizontalOptions="Center">
                        <Label Text="{Binding TotalXp}" FontSize="20" FontAttributes="Bold" TextColor="White" VerticalOptions="Center" />
                        <Label Text="xp" FontSize="11" TextColor="#7EB4F0" VerticalOptions="Center" />
                    </HorizontalStackLayout>
                    <BoxView Grid.Column="3" WidthRequest="1" BackgroundColor="#40FFFFFF" VerticalOptions="Fill" />
                    <HorizontalStackLayout Grid.Column="4" Spacing="6" HorizontalOptions="Center">
                        <Label Text="{Binding TodayLessons}" FontSize="20" FontAttributes="Bold" TextColor="White" VerticalOptions="Center" />
                        <Label Text="today" FontSize="11" TextColor="#6DD4A0" VerticalOptions="Center" />
                    </HorizontalStackLayout>
                </Grid>
            </Border>

            <!-- AI Word of the Day — compact inline definition style -->
            <Border Margin="16,0,16,20" StrokeShape="RoundRectangle 16" Stroke="Transparent" Padding="0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.6">
                        <GradientStop Color="#2D1B4E" Offset="0.0" />
                        <GradientStop Color="#1E1238" Offset="0.6" />
                        <GradientStop Color="#140E28" Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Background>
                <Grid ColumnDefinitions="4,*">
                    <!-- Purple accent stripe -->
                    <BoxView BackgroundColor="#A855F7" VerticalOptions="Fill"
                             InputTransparent="True">
                        <BoxView.Shadow>
                            <Shadow Brush="#A855F7" Offset="3,0" Radius="10" Opacity="0.4" />
                        </BoxView.Shadow>
                    </BoxView>
                    <VerticalStackLayout Grid.Column="1" Spacing="4" Padding="14,12,14,12">
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                            <Label Text="{Binding WordOfDay}" FontSize="18" FontAttributes="Bold"
                                   TextColor="#D8B4FE" VerticalOptions="Center" />
                            <Label Grid.Column="1" Text="Word of the Day" FontSize="10"
                                   TextColor="#7C3AED" FontAttributes="Bold" VerticalOptions="Center"
                                   HorizontalOptions="End" />
                        </Grid>
                        <Label Text="{Binding WordDefinition}" FontSize="12.5" TextColor="#C0B0D8"
                               LineBreakMode="WordWrap" LineHeight="1.25" />
                    </VerticalStackLayout>
                </Grid>
            </Border>

            <!-- Learning Paths Section Header -->
            <Label Text="Learning Paths" FontSize="18" FontAttributes="Bold"
                   TextColor="#AAAAAA" Padding="20,0,20,8" />

            <!-- Learning Paths as rich cards (BindableLayout) -->
            <VerticalStackLayout Padding="16,0,16,100" Spacing="14"
                                 BindableLayout.ItemsSource="{Binding PathItems}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="vm:HomePathItem">
                        <Border StrokeShape="RoundRectangle 22" StrokeThickness="1" Padding="0">
                            <Border.BackgroundColor>
                                <Color>#CC151025</Color>
                            </Border.BackgroundColor>
                            <Border.Stroke>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#50FFFFFF" Offset="0.0" />
                                    <GradientStop Color="#12FFFFFF" Offset="0.5" />
                                    <GradientStop Color="#06FFFFFF" Offset="1.0" />
                                </LinearGradientBrush>
                            </Border.Stroke>
                            <Border.Shadow>
                                <Shadow Brush="#000000" Offset="0,6" Radius="20" Opacity="0.6" />
                            </Border.Shadow>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:HomeViewModel}}, Path=NavigateToPathCommand}"
                                    CommandParameter="{Binding Id}" />
                            </Border.GestureRecognizers>
                            <Grid>
                                <!-- Large semi-transparent icon as background -->
                                <Image Source="{Binding IconImage}" WidthRequest="100" HeightRequest="100"
                                       HorizontalOptions="End" VerticalOptions="Start"
                                       Opacity="0.35" Margin="0,8,8,0" InputTransparent="True" />

                                <!-- Left accent bar -->
                                <BoxView WidthRequest="3" BackgroundColor="{Binding Color}"
                                         HorizontalOptions="Start" VerticalOptions="Fill"
                                         Margin="0,14,0,14" Opacity="0.7"
                                         InputTransparent="True">
                                    <BoxView.Shadow>
                                        <Shadow Brush="{Binding Color}" Offset="2,0" Radius="8" Opacity="0.4" />
                                    </BoxView.Shadow>
                                </BoxView>

                                <!-- Content overlay -->
                                <VerticalStackLayout Spacing="8" Padding="18,14,16,14">
                                    <!-- Row 1: Title -->
                                    <VerticalStackLayout Spacing="2">
                                        <Label Text="{Binding Title}" FontSize="19" FontAttributes="Bold"
                                               FontFamily="OpenSansSemibold" TextColor="White" />
                                        <Label Text="{Binding ProgressText}" FontSize="13"
                                               TextColor="#AAAAAA" />
                                    </VerticalStackLayout>

                                    <!-- Row 2: Tags -->
                                    <HorizontalStackLayout Spacing="6">
                                        <Border BackgroundColor="#305B8FD4" StrokeShape="RoundRectangle 10"
                                                Stroke="Transparent" Padding="10,4">
                                            <Label Text="Course" FontSize="10" TextColor="#5B8FD4"
                                                   FontAttributes="Bold" />
                                        </Border>
                                        <Border BackgroundColor="#305B8FD4" StrokeShape="RoundRectangle 10"
                                                Stroke="Transparent" Padding="10,4">
                                            <Label Text="{Binding LevelTag}" FontSize="10" TextColor="#8BB8F4"
                                                   FontAttributes="Bold" />
                                        </Border>
                                    </HorizontalStackLayout>

                                    <!-- Row 3: Progress bar -->
                                    <Grid HeightRequest="5">
                                        <Border BackgroundColor="#12FFFFFF" StrokeShape="RoundRectangle 2.5"
                                                Stroke="Transparent" />
                                        <Border StrokeShape="RoundRectangle 2.5" Stroke="Transparent"
                                                HorizontalOptions="Start"
                                                BackgroundColor="{Binding Color}"
                                                WidthRequest="{Binding Progress, Converter={StaticResource ProgressToWidthConverter}, ConverterParameter=300}">
                                            <Border.Shadow>
                                                <Shadow Brush="{Binding Color}" Offset="0,0" Radius="6" Opacity="0.6" />
                                            </Border.Shadow>
                                        </Border>
                                    </Grid>

                                    <!-- Row 4: Continue hint -->
                                    <Label Text="{Binding ContinueText}" FontSize="12" TextColor="#888888"
                                           MaxLines="1" LineBreakMode="TailTruncation"
                                           IsVisible="{Binding HasContinueText}" />
                                </VerticalStackLayout>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
    </Grid>
</ContentPage>
