<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AlohaAI.ViewModels"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             x:Class="AlohaAI.Views.LessonPage"
             x:DataType="vm:LessonViewModel"
             Title="{Binding Title}"
             SafeAreaEdges="None">
    <Grid RowDefinitions="Auto,Auto,*,Auto">
        <!-- Layer 0: Background Image spanning all rows -->
        <Image Grid.RowSpan="4" Source="bg_sunset.png" Aspect="AspectFill" InputTransparent="True" />
        <!-- Layer 1: Dark overlay for readability -->
        <BoxView Grid.RowSpan="4" Color="#2A000000" InputTransparent="True" />

        <!-- Gradient accent top bar -->
        <Border HeightRequest="3" Stroke="Transparent">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#5B9FE6" Offset="0.0" />
                    <GradientStop Color="#7B68AE" Offset="0.5" />
                    <GradientStop Color="#E88BBF" Offset="1.0" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <!-- Lesson Progress Header -->
        <Border Grid.Row="1" Stroke="Transparent" Padding="20,10">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#25FFFFFF" Offset="0.0" />
                    <GradientStop Color="#10FFFFFF" Offset="1.0" />
                </LinearGradientBrush>
            </Border.Background>
            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                <VerticalStackLayout VerticalOptions="Center" Spacing="4">
                    <Label Text="{Binding LessonPositionText}" FontSize="13" TextColor="{StaticResource Gray300}" />
                    <Grid HeightRequest="4">
                        <Border BackgroundColor="#20FFFFFF" StrokeShape="RoundRectangle 2" Stroke="Transparent" />
                        <Border BackgroundColor="{StaticResource Primary}" StrokeShape="RoundRectangle 2" Stroke="Transparent"
                                HorizontalOptions="Start"
                                WidthRequest="{Binding LessonProgress, Converter={StaticResource ProgressToWidthConverter}, ConverterParameter=260}">
                            <Border.Shadow>
                                <Shadow Brush="{StaticResource Primary}" Offset="0,0" Radius="4" Opacity="0.5" />
                            </Border.Shadow>
                        </Border>
                    </Grid>
                </VerticalStackLayout>
                <Label Grid.Column="1" Text="{Binding ModuleTitle}" FontSize="12" TextColor="{StaticResource Gray400}"
                       VerticalOptions="Center" MaxLines="1" LineBreakMode="TailTruncation" />
            </Grid>
        </Border>

        <!-- Lesson Content -->
        <ScrollView Grid.Row="2">
            <VerticalStackLayout x:Name="ContentArea" Padding="20" Spacing="12" />
        </ScrollView>

        <!-- XP Earned Popup -->
        <Border x:Name="XpPopup"
                IsVisible="False"
                Opacity="0"
                BackgroundColor="{StaticResource XPColor}"
                StrokeShape="RoundRectangle 20"
                Stroke="Transparent"
                Padding="20,12"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                ZIndex="10">
            <Border.Shadow>
                <Shadow Brush="{StaticResource XPColor}" Offset="0,4" Radius="16" Opacity="0.5" />
            </Border.Shadow>
            <Label x:Name="XpPopupLabel" Text="+25 XP" FontSize="28" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center" />
        </Border>

        <!-- Bottom Action Bar -->
        <Border Grid.Row="3" Stroke="Transparent" Padding="20,12">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#30FFFFFF" Offset="0.0" />
                    <GradientStop Color="#15FFFFFF" Offset="1.0" />
                </LinearGradientBrush>
            </Border.Background>
            <VerticalStackLayout Spacing="8">
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                    <VerticalStackLayout VerticalOptions="Center" Spacing="2">
                        <Label Text="{Binding Title}" FontSize="14" FontAttributes="Bold" TextColor="White" MaxLines="1" LineBreakMode="TailTruncation" />
                        <Label Text="{Binding LessonXp, StringFormat='+{0} XP on completion'}"
                               FontSize="12" TextColor="{StaticResource XPColor}" />
                    </VerticalStackLayout>
                    <Button Grid.Column="1"
                            Command="{Binding MarkCompleteCommand}"
                            IsEnabled="{Binding IsCompleted, Converter={StaticResource InvertedBoolConverter}}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            CornerRadius="14"
                            FontAttributes="Bold"
                            Padding="20,0"
                            HeightRequest="44">
                        <Button.Shadow>
                            <Shadow Brush="{StaticResource Primary}" Offset="0,4" Radius="12" Opacity="0.4" />
                        </Button.Shadow>
                        <Button.Triggers>
                            <DataTrigger TargetType="Button" Binding="{Binding IsCompleted}" Value="True">
                                <Setter Property="Text" Value="✅ Done" />
                            </DataTrigger>
                            <DataTrigger TargetType="Button" Binding="{Binding IsCompleted}" Value="False">
                                <Setter Property="Text" Value="Mark Complete" />
                            </DataTrigger>
                        </Button.Triggers>
                    </Button>
                </Grid>

                <!-- Next Lesson Button -->
                <Button IsVisible="{Binding HasNextLesson}"
                        Command="{Binding NextLessonCommand}"
                        Text="{Binding NextLessonTitle, StringFormat='Next: {0} →'}"
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource Primary}"
                        FontSize="13"
                        HeightRequest="36"
                        Padding="0" />
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>
