<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AlohaAI.ViewModels"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             x:Class="AlohaAI.Views.PathDetailPage"
             x:DataType="vm:PathDetailViewModel"
             Title="{Binding Title}"
             Shell.NavBarIsVisible="False"
             ios:Page.SafeAreaEdges="None">
    <Grid>
        <!-- Layer 0: Sunset Gradient Background -->
        <BoxView InputTransparent="True">
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="#080510" Offset="0.0" />
                    <GradientStop Color="#1B0D3D" Offset="0.25" />
                    <GradientStop Color="#3A1D7A" Offset="0.50" />
                    <GradientStop Color="#6B3FA0" Offset="0.70" />
                    <GradientStop Color="#B85A6A" Offset="0.85" />
                    <GradientStop Color="#E8734F" Offset="1.0" />
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>

        <!-- Ambient Orb -->
        <Border HorizontalOptions="End" VerticalOptions="Center"
                TranslationX="100" TranslationY="50"
                HeightRequest="300" WidthRequest="300"
                StrokeThickness="0" Stroke="Transparent" InputTransparent="True">
            <Border.StrokeShape><RoundRectangle CornerRadius="150" /></Border.StrokeShape>
            <Border.Background>
                <RadialGradientBrush Center="0.5,0.5" Radius="0.5">
                    <GradientStop Color="#355B9FE6" Offset="0" />
                    <GradientStop Color="#105B9FE6" Offset="0.6" />
                    <GradientStop Color="Transparent" Offset="1" />
                </RadialGradientBrush>
            </Border.Background>
        </Border>

        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}"
                           HorizontalOptions="Center" VerticalOptions="Center"
                           Color="{StaticResource Primary}" ZIndex="99" />
    <ScrollView>
        <VerticalStackLayout x:Name="MainContent" Spacing="0">

            <!-- Gradient Header -->
            <Border StrokeShape="RoundRectangle 0,0,24,24" Stroke="Transparent" Padding="20,0,20,20">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#5B9FE6" Offset="0.0" />
                        <GradientStop Color="#7B68AE" Offset="0.45" />
                        <GradientStop Color="#2D1B69" Offset="1.0" />
                    </LinearGradientBrush>
                </Border.Background>
                <VerticalStackLayout Spacing="12" Padding="0,70,0,0">
                    <!-- Back button -->
                    <Border BackgroundColor="#33FFFFFF" StrokeShape="RoundRectangle 12" StrokeThickness="0"
                            Padding="10,6" HorizontalOptions="Start">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding GoBackCommand}" />
                        </Border.GestureRecognizers>
                        <HorizontalStackLayout Spacing="6">
                            <Label Text="←" FontSize="18" TextColor="White" VerticalOptions="Center" />
                            <Label Text="Back" FontSize="14" TextColor="White" VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Path icon + title -->
                    <HorizontalStackLayout Spacing="14">
                        <Border BackgroundColor="#FFFFFF20" StrokeShape="RoundRectangle 14" Stroke="Transparent"
                                WidthRequest="52" HeightRequest="52">
                            <Image Source="{Binding PathIcon}" WidthRequest="36" HeightRequest="36"
                                   HorizontalOptions="Center" VerticalOptions="Center" />
                        </Border>
                        <VerticalStackLayout VerticalOptions="Center" Spacing="2">
                            <Label Text="{Binding Title}" FontSize="24" FontAttributes="Bold" TextColor="White" />
                            <Label Text="{Binding PathDescription}" FontSize="13" TextColor="White" Opacity="0.75"
                                   MaxLines="2" LineBreakMode="TailTruncation" />
                        </VerticalStackLayout>
                    </HorizontalStackLayout>

                    <!-- Progress bar in header -->
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12" Margin="0,4,0,0">
                        <Grid HeightRequest="6">
                            <Border BackgroundColor="#FFFFFF30" StrokeShape="RoundRectangle 3" Stroke="Transparent" />
                            <Border BackgroundColor="White" StrokeShape="RoundRectangle 3" Stroke="Transparent"
                                    HorizontalOptions="Start"
                                    WidthRequest="{Binding OverallProgress, Converter={StaticResource ProgressToWidthConverter}, ConverterParameter=280}">
                                <Border.Shadow>
                                    <Shadow Brush="White" Offset="0,0" Radius="6" Opacity="0.5" />
                                </Border.Shadow>
                            </Border>
                        </Grid>
                        <Label Grid.Column="1" Text="{Binding OverallProgressText}"
                               FontSize="13" TextColor="White" Opacity="0.9" VerticalOptions="Center" />
                    </Grid>
                </VerticalStackLayout>
            </Border>

            <VerticalStackLayout Padding="20,20,20,20" Spacing="16">

            <!-- Modules -->
            <CollectionView ItemsSource="{Binding Modules}" SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="16" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="vm:ModuleDisplayItem">
                        <Border Style="{StaticResource GlassCard}">
                            <VerticalStackLayout Spacing="12">
                                <!-- Module Header -->
                                <Grid ColumnDefinitions="*,Auto">
                                    <Label Text="{Binding Title}" FontSize="18" FontAttributes="Bold" TextColor="White" />
                                    <Label Grid.Column="1" Text="{Binding ProgressText}"
                                           FontSize="14" TextColor="{StaticResource Gray300}" VerticalOptions="Center" />
                                </Grid>
                                <Label Text="{Binding Description}" FontSize="12" TextColor="{StaticResource Gray400}" />

                                <!-- Lessons List -->
                                <CollectionView ItemsSource="{Binding Lessons}" SelectionMode="None">
                                    <CollectionView.ItemTemplate>
                                        <DataTemplate x:DataType="vm:LessonDisplayItem">
                                            <Grid ColumnDefinitions="Auto,*,Auto" Padding="0,8" ColumnSpacing="12">
                                                <Grid.GestureRecognizers>
                                                    <TapGestureRecognizer
                                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:PathDetailViewModel}}, Path=SelectLessonCommand}"
                                                        CommandParameter="{Binding .}" />
                                                </Grid.GestureRecognizers>
                                                <Border WidthRequest="24" HeightRequest="24"
                                                        StrokeShape="RoundRectangle 12"
                                                        StrokeThickness="2"
                                                        Stroke="{Binding StatusColor}"
                                                        BackgroundColor="{Binding StatusBackground}"
                                                        VerticalOptions="Center">
                                                    <Label Text="✓" FontSize="12" TextColor="White"
                                                           IsVisible="{Binding IsCompleted}"
                                                           HorizontalOptions="Center" VerticalOptions="Center" />
                                                </Border>
                                                <Label Grid.Column="1" Text="{Binding Title}" FontSize="15"
                                                       TextColor="{Binding TitleColor}" VerticalOptions="Center" />
                                                <Label Grid.Column="2" Text="{Binding Xp, StringFormat='+{0} XP'}"
                                                       FontSize="12" TextColor="{StaticResource XPColor}" VerticalOptions="Center" />
                                            </Grid>
                                        </DataTemplate>
                                    </CollectionView.ItemTemplate>
                                </CollectionView>

                                <!-- Quiz Button -->
                                <Button Text="Take Quiz"
                                        IsVisible="{Binding HasQuiz}"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:PathDetailViewModel}}, Path=StartQuizCommand}"
                                        CommandParameter="{Binding Id}"
                                        BackgroundColor="{StaticResource Secondary}"
                                        TextColor="White"
                                        CornerRadius="14"
                                        FontAttributes="Bold"
                                        HeightRequest="44">
                                    <Button.Shadow>
                                        <Shadow Brush="{StaticResource Secondary}" Offset="0,4" Radius="12" Opacity="0.4" />
                                    </Button.Shadow>
                                </Button>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
    </Grid>
</ContentPage>
