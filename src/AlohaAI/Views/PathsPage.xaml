<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AlohaAI.ViewModels"
             x:Class="AlohaAI.Views.PathsPage"
             x:DataType="vm:PathsViewModel"
             Title="Learning Paths"
             Shell.NavBarIsVisible="False">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">
            <Label Text="Learning Paths"
                   FontSize="28"
                   FontAttributes="Bold"
                   Margin="0,20,0,4" />
            <Label Text="Choose a path to start learning"
                   FontSize="14"
                   Opacity="0.6"
                   Margin="0,0,0,8" />

            <CollectionView ItemsSource="{Binding Paths}" SelectionMode="None">
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="12" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="vm:PathDisplayItem">
                        <Border BackgroundColor="{AppThemeBinding Light={StaticResource CardLight}, Dark={StaticResource CardDark}}"
                                StrokeShape="RoundRectangle 16"
                                Stroke="Transparent"
                                Padding="20">
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:PathsViewModel}}, Path=SelectPathCommand}"
                                    CommandParameter="{Binding Id}" />
                            </Border.GestureRecognizers>
                            <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="12">
                                <!-- Title Row -->
                                <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                                    <Border BackgroundColor="{Binding Color}"
                                            StrokeShape="RoundRectangle 10"
                                            Stroke="Transparent"
                                            WidthRequest="44" HeightRequest="44">
                                        <Label Text="ðŸ¤–" FontSize="22"
                                               HorizontalOptions="Center" VerticalOptions="Center" />
                                    </Border>
                                    <VerticalStackLayout Grid.Column="1" VerticalOptions="Center" Spacing="2">
                                        <Label Text="{Binding Title}" FontSize="18" FontAttributes="Bold" />
                                        <Label Text="{Binding Description}" FontSize="12" Opacity="0.6"
                                               MaxLines="2" LineBreakMode="TailTruncation" />
                                    </VerticalStackLayout>
                                    <Label Grid.Column="2" Text="â†’" FontSize="20" VerticalOptions="Center" Opacity="0.4" />
                                </Grid>

                                <!-- Info Row -->
                                <HorizontalStackLayout Grid.Row="1" Spacing="16">
                                    <HorizontalStackLayout Spacing="4">
                                        <Label Text="ðŸ“š" FontSize="12" />
                                        <Label Text="{Binding ModuleCount, StringFormat='{0} modules'}" FontSize="12" Opacity="0.6" />
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout Spacing="4">
                                        <Label Text="â±ï¸" FontSize="12" />
                                        <Label Text="{Binding EstimatedHours, StringFormat='~{0}h'}" FontSize="12" Opacity="0.6" />
                                    </HorizontalStackLayout>
                                    <HorizontalStackLayout Spacing="4">
                                        <Label Text="âœ…" FontSize="12" />
                                        <Label Text="{Binding ProgressText}" FontSize="12" Opacity="0.6" />
                                    </HorizontalStackLayout>
                                </HorizontalStackLayout>

                                <!-- Progress Bar -->
                                <Grid Grid.Row="2" HeightRequest="6">
                                    <Border BackgroundColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray700}}"
                                            StrokeShape="RoundRectangle 3"
                                            Stroke="Transparent" />
                                    <Border BackgroundColor="{Binding Color}"
                                            StrokeShape="RoundRectangle 3"
                                            Stroke="Transparent"
                                            HorizontalOptions="Start"
                                            WidthRequest="{Binding Progress, Converter={StaticResource ProgressToWidthConverter}, ConverterParameter=300}" />
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
