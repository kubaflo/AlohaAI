<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AlohaAI.ViewModels"
             x:Class="AlohaAI.Views.ProfilePage"
             x:DataType="vm:ProfileViewModel"
             Title="Profile"
             Shell.NavBarIsVisible="False"
             SafeAreaEdges="None">
    <Grid SafeAreaEdges="None">
        <Image Source="bg_sunset.png" Aspect="AspectFill" InputTransparent="True" />
        <BoxView Color="#55000010" InputTransparent="True" />

        <ActivityIndicator IsRunning="{Binding IsBusy}" IsVisible="{Binding IsBusy}"
                           HorizontalOptions="Center" VerticalOptions="Center"
                           Color="{StaticResource Primary}" ZIndex="99" />
    <ScrollView>
        <VerticalStackLayout x:Name="MainContent" Spacing="0">

            <!-- Top bar -->
            <Grid Padding="20,60,20,12" ColumnDefinitions="Auto,*,Auto" ColumnSpacing="12">
                <Border StrokeShape="RoundRectangle 20"
                        StrokeThickness="1" WidthRequest="40" HeightRequest="40"
                        BackgroundColor="#E81A1035">
                    <Border.Stroke>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#40FFFFFF" Offset="0.0" />
                            <GradientStop Color="#10FFFFFF" Offset="1.0" />
                        </LinearGradientBrush>
                    </Border.Stroke>
                    <Image Source="mascot.png" WidthRequest="40" HeightRequest="40"
                           HorizontalOptions="Center" VerticalOptions="Center" Aspect="AspectFill" />
                </Border>
                <Label Grid.Column="1" Text="Profile" FontSize="24" FontAttributes="Bold"
                       TextColor="White" VerticalOptions="Center" />
                <Border Grid.Column="2" StrokeShape="RoundRectangle 16"
                        Stroke="Transparent" BackgroundColor="#E81A1035"
                        WidthRequest="34" HeightRequest="34">
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding OpenSettingsCommand}" />
                    </Border.GestureRecognizers>
                    <Label Text="âš™" FontSize="16" HorizontalOptions="Center" VerticalOptions="Center" TextColor="#FFFFFFB0" />
                </Border>
            </Grid>

            <!-- Level & Stats Card -->
            <Border Margin="16,0,16,12" Style="{StaticResource GlassCard}" Padding="20,16">
                <Grid ColumnDefinitions="Auto,*" ColumnSpacing="16">
                    <Grid WidthRequest="64" HeightRequest="64">
                        <Border StrokeShape="RoundRectangle 32"
                                Stroke="#FFD54F" StrokeThickness="3"
                                BackgroundColor="#25FFD54F"
                                WidthRequest="64" HeightRequest="64"
                                HorizontalOptions="Center" VerticalOptions="Center">
                            <Image Source="mascot.png" Aspect="AspectFill" />
                        </Border>
                        <Label Text="Level" FontSize="9" TextColor="#FFFFFFA0"
                               HorizontalOptions="Center" VerticalOptions="End" Margin="0,0,0,-14" />
                    </Grid>
                    <VerticalStackLayout Grid.Column="1" Spacing="6" VerticalOptions="Center">
                        <HorizontalStackLayout Spacing="12">
                            <HorizontalStackLayout Spacing="4">
                                <Label Text="{Binding TotalXp}" FontSize="24" FontAttributes="Bold" TextColor="White" />
                                <Label Text="XP" FontSize="13" TextColor="#FFD54F" VerticalOptions="End" Margin="0,0,0,3" />
                            </HorizontalStackLayout>
                            <HorizontalStackLayout Spacing="4">
                                <Label Text="ðŸ”¥" FontSize="14" VerticalOptions="Center" />
                                <Label Text="{Binding CurrentStreak}" FontSize="20" FontAttributes="Bold" TextColor="White" VerticalOptions="Center" />
                            </HorizontalStackLayout>
                        </HorizontalStackLayout>
                        <HorizontalStackLayout Spacing="4">
                            <Label Text="Daily Goal" FontSize="12" TextColor="#FFFFFFA0" VerticalOptions="Center" />
                            <Label Text="{Binding DailyGoalFraction, StringFormat='{0:P0}'}" FontSize="12" TextColor="#FFD54F" VerticalOptions="Center" />
                        </HorizontalStackLayout>

                    </VerticalStackLayout>
                </Grid>
            </Border>

            <!-- Learning Paths Header -->
            <Label Text="Learning Paths" FontSize="18" FontAttributes="Bold" TextColor="White"
                   Padding="20,8,20,8" />

            <!-- Path Progress Cards using BindableLayout -->
            <VerticalStackLayout Padding="16,0,16,0" Spacing="10"
                                 BindableLayout.ItemsSource="{Binding PathProgress}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="vm:PathProgressItem">
                        <Border Style="{StaticResource GlassCard}" Padding="14,12">
                            <VerticalStackLayout Spacing="8">
                                <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
                                    <Image Source="{Binding IconImage}" WidthRequest="24" HeightRequest="24" VerticalOptions="Center" />
                                    <Label Grid.Column="1" Text="{Binding Title}" FontSize="16"
                                           FontAttributes="Bold" TextColor="White" VerticalOptions="Center" />
                                    <Label Grid.Column="2" Text="{Binding PercentText}" FontSize="15"
                                           FontAttributes="Bold" TextColor="{Binding BarColor}" VerticalOptions="Center" />
                                </Grid>
                                <Grid HeightRequest="5">
                                    <Border BackgroundColor="#15FFFFFF"
                                            StrokeShape="RoundRectangle 2.5" Stroke="Transparent" />
                                    <Border BackgroundColor="{Binding BarColor}"
                                            StrokeShape="RoundRectangle 2.5" Stroke="Transparent"
                                            HorizontalOptions="Start"
                                            WidthRequest="{Binding Progress, Converter={StaticResource ProgressToWidthConverter}, ConverterParameter=280}" />
                                </Grid>
                                <!-- Module list using BindableLayout -->
                                <VerticalStackLayout Spacing="3"
                                                     BindableLayout.ItemsSource="{Binding Modules}">
                                    <BindableLayout.ItemTemplate>
                                        <DataTemplate x:DataType="vm:ModuleProgressItem">
                                            <Grid ColumnDefinitions="*,Auto" ColumnSpacing="8" Padding="2,1">
                                                <Label Text="{Binding Title}" FontSize="12" TextColor="#FFFFFFA0"
                                                       MaxLines="1" LineBreakMode="TailTruncation" VerticalOptions="Center" />
                                                <Label Grid.Column="1" Text="{Binding ProgressText}" FontSize="11" TextColor="#FFFFFF70" VerticalOptions="Center" />
                                            </Grid>
                                        </DataTemplate>
                                    </BindableLayout.ItemTemplate>
                                </VerticalStackLayout>
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </VerticalStackLayout>

            <!-- Achievements Section -->
            <Label Text="Achievements" FontSize="18" FontAttributes="Bold" TextColor="White"
                   Margin="20,16,20,8" />

            <!-- Achievements Grid using FlexLayout + BindableLayout -->
            <FlexLayout Wrap="Wrap" JustifyContent="Start" Margin="16,0,16,0"
                        BindableLayout.ItemsSource="{Binding Achievements}">
                <BindableLayout.ItemTemplate>
                    <DataTemplate x:DataType="vm:AchievementItem">
                        <Border BackgroundColor="#E81A1035"
                                StrokeShape="RoundRectangle 14"
                                StrokeThickness="0.8"
                                Padding="8" HeightRequest="100"
                                WidthRequest="108" Margin="3,4">
                            <Border.Stroke>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#40FFFFFF" Offset="0.0" />
                                    <GradientStop Color="#08FFFFFF" Offset="1.0" />
                                </LinearGradientBrush>
                            </Border.Stroke>
                            <VerticalStackLayout Spacing="4" VerticalOptions="Center" HorizontalOptions="Center">
                                <Image Source="{Binding Icon}" WidthRequest="28" HeightRequest="28"
                                       Opacity="{Binding IconOpacity}" HorizontalOptions="Center" />
                                <Label Text="{Binding Title}" FontSize="10" FontAttributes="Bold"
                                       TextColor="{Binding TextColor}" HorizontalOptions="Center"
                                       HorizontalTextAlignment="Center" MaxLines="2" LineBreakMode="WordWrap" />
                                <Label Text="{Binding StatusText}" FontSize="9"
                                       TextColor="{Binding DescColor}" HorizontalOptions="Center" />
                            </VerticalStackLayout>
                        </Border>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </FlexLayout>

            <!-- About -->
            <VerticalStackLayout Spacing="4" HorizontalOptions="Center" Margin="0,20,0,110">
                <Label Text="AlohaAI v1.0.0" FontSize="11" TextColor="#FFFFFF50" HorizontalOptions="Center" />
                <Label Text="Open source â€¢ MIT License" FontSize="11" TextColor="#FFFFFF50" HorizontalOptions="Center" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
    </Grid>
</ContentPage>
