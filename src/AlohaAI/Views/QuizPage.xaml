<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AlohaAI.ViewModels"
             x:Class="AlohaAI.Views.QuizPage"
             x:DataType="vm:QuizViewModel"
             Title="Quiz"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{StaticResource Gray900}">
    <Grid RowDefinitions="Auto,*">

        <!-- Gradient Header -->
        <Border Grid.Row="0" StrokeThickness="0" StrokeShape="RoundRectangle 0,0,20,20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#5B9FE6" Offset="0.0" />
                    <GradientStop Color="#7B68AE" Offset="0.5" />
                    <GradientStop Color="#2D1B69" Offset="1.0" />
                </LinearGradientBrush>
            </Border.Background>
            <VerticalStackLayout Padding="20,60,20,20" Spacing="12">
                <!-- Back Button + Title Row -->
                <Grid ColumnDefinitions="Auto,*,Auto">
                    <Border BackgroundColor="#33FFFFFF" StrokeShape="RoundRectangle 12" StrokeThickness="0"
                            Padding="8,6" VerticalOptions="Center">
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding GoBackCommand}" />
                        </Border.GestureRecognizers>
                        <Label Text="â†" FontSize="18" TextColor="White" />
                    </Border>
                    <Label Grid.Column="1" Text="{Binding QuizTitle}" FontSize="18" FontAttributes="Bold"
                           TextColor="White" VerticalOptions="Center" HorizontalOptions="Center" />
                    <Label Grid.Column="2" Text="{Binding ProgressText}" FontSize="13"
                           TextColor="#CCFFFFFF" VerticalOptions="Center" />
                </Grid>
                <!-- Progress Bar -->
                <ProgressBar Progress="{Binding ProgressValue}" ProgressColor="#FFD54F"
                             HeightRequest="4" />
            </VerticalStackLayout>
        </Border>

        <!-- Content Area -->
        <Grid Grid.Row="1">
            <!-- Question View -->
            <Grid IsVisible="{Binding ShowQuestion}" RowDefinitions="*,Auto" Padding="20,16,20,20">

                <!-- Question + Options -->
                <ScrollView>
                    <VerticalStackLayout Spacing="16">
                        <Label Text="{Binding QuestionText}" FontSize="20" FontAttributes="Bold"
                               TextColor="White" LineHeight="1.3" />

                        <CollectionView ItemsSource="{Binding Options}" SelectionMode="None">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Vertical" ItemSpacing="8" />
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="vm:QuizOptionItem">
                                    <Border BackgroundColor="{Binding BackgroundColor}"
                                            StrokeShape="RoundRectangle 12"
                                            Stroke="#444444"
                                            StrokeThickness="1"
                                            Padding="16,14">
                                        <Border.GestureRecognizers>
                                            <TapGestureRecognizer
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type vm:QuizViewModel}}, Path=SelectOptionCommand}"
                                                CommandParameter="{Binding .}" />
                                        </Border.GestureRecognizers>
                                        <Grid ColumnDefinitions="Auto,*">
                                            <Border BackgroundColor="{Binding IndicatorColor}"
                                                    StrokeShape="RoundRectangle 12"
                                                    Stroke="{Binding IndicatorStroke}"
                                                    StrokeThickness="2"
                                                    WidthRequest="24" HeightRequest="24"
                                                    VerticalOptions="Center" Margin="0,0,12,0">
                                                <Label Text="{Binding IndicatorText}" FontSize="12"
                                                       TextColor="White" HorizontalOptions="Center"
                                                       VerticalOptions="Center" />
                                            </Border>
                                            <Label Grid.Column="1" Text="{Binding Text}" FontSize="15"
                                                   TextColor="White" Opacity="{Binding TextOpacity}"
                                                   VerticalOptions="Center" />
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <!-- Explanation -->
                        <Border x:Name="ExplanationCard"
                                IsVisible="{Binding ShowExplanation}"
                                BackgroundColor="{StaticResource CardDark}"
                                StrokeShape="RoundRectangle 12"
                                Stroke="#7B68AE"
                                StrokeThickness="1"
                                Padding="16">
                            <VerticalStackLayout Spacing="8">
                                <Label Text="ðŸ’¡ Explanation" FontSize="14" FontAttributes="Bold"
                                       TextColor="{StaticResource XPColor}" />
                                <Label Text="{Binding ExplanationText}" FontSize="14"
                                       TextColor="#CCCCCC" LineHeight="1.4" />
                            </VerticalStackLayout>
                        </Border>
                    </VerticalStackLayout>
                </ScrollView>

                <!-- Next Button -->
                <Button Grid.Row="1"
                        Text="Next â†’"
                        IsVisible="{Binding ShowExplanation}"
                        Command="{Binding NextQuestionCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        CornerRadius="12"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        Margin="0,12,0,0" />
            </Grid>

            <!-- Results View -->
            <VerticalStackLayout x:Name="ResultsView"
                                 IsVisible="{Binding ShowResults}"
                                 Padding="20"
                                 Spacing="20"
                                 VerticalOptions="Center">
                <Image Source="{Binding ResultIcon}" WidthRequest="80" HeightRequest="80"
                       HorizontalOptions="Center" />

                <Label Text="{Binding ResultTitle}" HorizontalOptions="Center"
                       FontSize="24" FontAttributes="Bold" TextColor="White" />

                <Label Text="{Binding ResultSubtitle}" HorizontalOptions="Center"
                       FontSize="14" TextColor="#AAAAAA" />

                <Border BackgroundColor="{StaticResource CardDark}"
                        StrokeShape="RoundRectangle 16" Stroke="Transparent" Padding="24">
                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" RowSpacing="8" ColumnSpacing="16">
                        <Label Text="Score" FontSize="13" TextColor="#AAAAAA" HorizontalOptions="Center" />
                        <Label Grid.Column="1" Text="XP Earned" FontSize="13" TextColor="#AAAAAA" HorizontalOptions="Center" />
                        <Label Grid.Row="1" Text="{Binding ScoreDisplay}" FontSize="28"
                               FontAttributes="Bold" TextColor="White" HorizontalOptions="Center" />
                        <Label Grid.Row="1" Grid.Column="1" Text="{Binding XpEarned, StringFormat='+{0}'}"
                               FontSize="28" FontAttributes="Bold" TextColor="{StaticResource XPColor}" HorizontalOptions="Center" />
                    </Grid>
                </Border>

                <Button Text="Continue"
                        Command="{Binding FinishCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        CornerRadius="12"
                        FontAttributes="Bold"
                        HeightRequest="50" />
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>
