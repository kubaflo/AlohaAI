<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AlohaAI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:AlohaAI.Views"
    Title="AlohaAI"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False">

    <TabBar>
        <ShellContent
            Title="Home"
            Icon="home.svg"
            ContentTemplate="{DataTemplate views:HomePage}"
            Route="home" />
        <ShellContent
            Title="Paths"
            Icon="paths.svg"
            ContentTemplate="{DataTemplate views:PathsPage}"
            Route="paths" />
        <ShellContent
            Title="Search"
            Icon="search.svg"
            ContentTemplate="{DataTemplate views:SearchPage}"
            Route="search" />
        <ShellContent
            Title="Profile"
            Icon="profile.svg"
            ContentTemplate="{DataTemplate views:ProfilePage}"
            Route="profile" />
    </TabBar>

</Shell>
