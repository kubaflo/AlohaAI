<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AlohaAI.ViewModels"
             x:Class="AlohaAI.Views.LessonPage"
             x:DataType="vm:LessonViewModel"
             Title="{Binding Title}"
             BackgroundColor="{StaticResource Gray900}">
    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Gradient accent top bar -->
        <Border HeightRequest="3" Stroke="Transparent">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#5B9FE6" Offset="0.0" />
                    <GradientStop Color="#7B68AE" Offset="0.5" />
                    <GradientStop Color="#E88BBF" Offset="1.0" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <!-- Lesson Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout x:Name="ContentArea" Padding="20" Spacing="12" />
        </ScrollView>

        <!-- XP Earned Popup -->
        <Border x:Name="XpPopup"
                IsVisible="False"
                Opacity="0"
                BackgroundColor="{StaticResource XPColor}"
                StrokeShape="RoundRectangle 20"
                Stroke="Transparent"
                Padding="20,12"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                ZIndex="10">
            <Label x:Name="XpPopupLabel" Text="+25 XP" FontSize="28" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center" />
        </Border>

        <!-- Bottom Action Bar -->
        <Border Grid.Row="2"
                BackgroundColor="{StaticResource CardDark}"
                Stroke="Transparent"
                Padding="20,12">
            <VerticalStackLayout Spacing="8">
                <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                    <VerticalStackLayout VerticalOptions="Center" Spacing="2">
                        <Label Text="{Binding Title}" FontSize="14" FontAttributes="Bold" MaxLines="1" LineBreakMode="TailTruncation" />
                        <Label Text="{Binding LessonXp, StringFormat='+{0} XP on completion'}"
                               FontSize="12" TextColor="{StaticResource XPColor}" />
                    </VerticalStackLayout>
                    <Button Grid.Column="1"
                            Command="{Binding MarkCompleteCommand}"
                            IsEnabled="{Binding IsCompleted, Converter={StaticResource InvertedBoolConverter}}"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="White"
                            CornerRadius="10"
                            FontAttributes="Bold"
                            Padding="20,0"
                            HeightRequest="44">
                        <Button.Triggers>
                            <DataTrigger TargetType="Button" Binding="{Binding IsCompleted}" Value="True">
                                <Setter Property="Text" Value="✅ Done" />
                            </DataTrigger>
                            <DataTrigger TargetType="Button" Binding="{Binding IsCompleted}" Value="False">
                                <Setter Property="Text" Value="Mark Complete" />
                            </DataTrigger>
                        </Button.Triggers>
                    </Button>
                </Grid>

                <!-- Next Lesson Button -->
                <Button IsVisible="{Binding HasNextLesson}"
                        Command="{Binding NextLessonCommand}"
                        Text="{Binding NextLessonTitle, StringFormat='Next: {0} →'}"
                        BackgroundColor="Transparent"
                        TextColor="{StaticResource Primary}"
                        FontSize="13"
                        HeightRequest="36"
                        Padding="0" />
            </VerticalStackLayout>
        </Border>
    </Grid>
</ContentPage>
