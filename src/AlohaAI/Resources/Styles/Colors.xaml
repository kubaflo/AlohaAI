<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- AlohaAI Brand Colors -->
    <Color x:Key="Primary">#4A90D9</Color>
    <Color x:Key="PrimaryDark">#6BA3E0</Color>
    <Color x:Key="PrimaryDarkText">#FFFFFF</Color>
    <Color x:Key="Secondary">#2ECC71</Color>
    <Color x:Key="SecondaryDarkText">#FFFFFF</Color>
    <Color x:Key="Tertiary">#9B59B6</Color>
    <Color x:Key="Accent">#F39C12</Color>

    <!-- Learning Path Colors -->
    <Color x:Key="AgenticAIColor">#4A90D9</Color>
    <Color x:Key="MLFundamentalsColor">#2ECC71</Color>
    <Color x:Key="MicrosoftAIColor">#9B59B6</Color>

    <!-- Streak / Gamification -->
    <Color x:Key="StreakColor">#FF6B35</Color>
    <Color x:Key="XPColor">#F1C40F</Color>
    <Color x:Key="SuccessColor">#27AE60</Color>
    <Color x:Key="ErrorColor">#E74C3C</Color>

    <!-- Neutrals -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>

    <Color x:Key="Gray50">#F8F9FA</Color>
    <Color x:Key="Gray100">#E9ECEF</Color>
    <Color x:Key="Gray200">#DEE2E6</Color>
    <Color x:Key="Gray300">#CED4DA</Color>
    <Color x:Key="Gray400">#ADB5BD</Color>
    <Color x:Key="Gray500">#6C757D</Color>
    <Color x:Key="Gray600">#495057</Color>
    <Color x:Key="Gray700">#343A40</Color>
    <Color x:Key="Gray800">#23272B</Color>
    <Color x:Key="Gray900">#1A1D21</Color>
    <Color x:Key="Gray950">#0D0F11</Color>

    <!-- Surface Colors (Dark-first) -->
    <Color x:Key="SurfaceDark">#1A1D21</Color>
    <Color x:Key="SurfaceLight">#FFFFFF</Color>
    <Color x:Key="CardDark">#23272B</Color>
    <Color x:Key="CardLight">#F8F9FA</Color>
    <Color x:Key="CodeBlockDark">#0D1117</Color>
    <Color x:Key="CodeBlockLight">#F6F8FA</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>
</ResourceDictionary>