<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AlohaAI.ViewModels"
             xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
             x:Class="AlohaAI.Views.LessonPage"
             x:DataType="vm:LessonViewModel"
             Title="{Binding Title}"
             Shell.NavBarIsVisible="False"
             Shell.TabBarIsVisible="False"
             BackgroundColor="#120C24"
             SafeAreaEdges="None">
    <Grid Margin="0,-60,0,-40" SafeAreaEdges="None">
        <!-- Purple gradient background -->
        <BoxView InputTransparent="True">
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#1E1035" Offset="0.0" />
                    <GradientStop Color="#120C24" Offset="1.0" />
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>

        <!-- Header image fading out -->
        <Grid HeightRequest="260" VerticalOptions="Start" InputTransparent="True">
            <Image Source="{Binding HeaderImage}" Aspect="AspectFill" />
            <BoxView>
                <BoxView.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#00000000" Offset="0.0" />
                        <GradientStop Color="#901E1035" Offset="0.5" />
                        <GradientStop Color="#FF120C24" Offset="1.0" />
                    </LinearGradientBrush>
                </BoxView.Background>
            </BoxView>
        </Grid>

        <!-- XP Earned Popup (above everything) -->
        <Border x:Name="XpPopup"
                IsVisible="False"
                Opacity="0"
                BackgroundColor="{StaticResource XPColor}"
                StrokeShape="RoundRectangle 20"
                Stroke="Transparent"
                Padding="20,12"
                HorizontalOptions="Center"
                VerticalOptions="Center"
                ZIndex="10">
            <Border.Shadow>
                <Shadow Brush="{StaticResource XPColor}" Offset="0,4" Radius="16" Opacity="0.5" />
            </Border.Shadow>
            <Label x:Name="XpPopupLabel" Text="+25 XP" FontSize="28" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center" />
        </Border>

        <!-- Everything scrolls -->
        <ScrollView>
            <VerticalStackLayout Spacing="0">

                <!-- Header -->
                <VerticalStackLayout Padding="20,70,20,16" Spacing="6">
                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="12">
                        <Border BackgroundColor="#C81A1035" StrokeShape="RoundRectangle 14" Padding="0"
                                WidthRequest="36" HeightRequest="36"
                                HorizontalOptions="Start" VerticalOptions="Center">
                            <Border.Stroke>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#40FFFFFF" Offset="0.0" />
                                    <GradientStop Color="#10FFFFFF" Offset="1.0" />
                                </LinearGradientBrush>
                            </Border.Stroke>
                            <Border.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding GoBackCommand}" />
                            </Border.GestureRecognizers>
                            <Label Text="←" FontSize="18" TextColor="White"
                                   HorizontalOptions="Center" VerticalOptions="Center" />
                        </Border>
                        <Label Grid.Column="1" Text="{Binding ModuleTitle}" FontSize="22" FontAttributes="Bold"
                               TextColor="White" MaxLines="2" LineBreakMode="WordWrap" VerticalOptions="Center">
                            <Label.Shadow>
                                <Shadow Brush="#40000000" Offset="0,1" Radius="4" Opacity="0.4" />
                            </Label.Shadow>
                        </Label>
                    </Grid>
                    <HorizontalStackLayout Spacing="8" Padding="48,0,0,0">
                        <Label Text="{Binding PathTitle}" FontSize="13" TextColor="#BBBBBB" />
                        <Label Text="·" FontSize="13" TextColor="#888888" />
                        <Label Text="{Binding LessonPositionText}" FontSize="13" TextColor="#BBBBBB" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>

                <!-- Progress Bar -->
                <Grid HeightRequest="4" Margin="20,0,20,16">
                    <Border BackgroundColor="#18FFFFFF" StrokeShape="RoundRectangle 2" Stroke="Transparent" />
                    <Border StrokeShape="RoundRectangle 2" Stroke="Transparent"
                            HorizontalOptions="Start"
                            BackgroundColor="{StaticResource Primary}"
                            WidthRequest="{Binding LessonProgress, Converter={StaticResource ProgressToWidthConverter}, ConverterParameter=335}">
                        <Border.Shadow>
                            <Shadow Brush="{StaticResource Primary}" Offset="0,0" Radius="4" Opacity="0.5" />
                        </Border.Shadow>
                    </Border>
                </Grid>

                <!-- Content Section -->
                <Label Text="Content" FontSize="17" FontAttributes="Bold"
                       TextColor="White" Padding="20,0,20,10">
                    <Label.Shadow>
                        <Shadow Brush="#40000000" Offset="0,1" Radius="2" Opacity="0.3" />
                    </Label.Shadow>
                </Label>

                <!-- Article Content Card (dark glassmorphism) -->
                <Border Margin="16,0,16,16" StrokeShape="RoundRectangle 18" StrokeThickness="0.8" Padding="18,16">
                    <Border.BackgroundColor>
                        <Color>#E81A1035</Color>
                    </Border.BackgroundColor>
                    <Border.Stroke>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#40FFFFFF" Offset="0.0" />
                            <GradientStop Color="#08FFFFFF" Offset="1.0" />
                        </LinearGradientBrush>
                    </Border.Stroke>
                    <Border.Shadow>
                        <Shadow Brush="#000000" Offset="0,8" Radius="24" Opacity="0.4" />
                    </Border.Shadow>
                    <VerticalStackLayout Spacing="0">
                        <!-- Markdown Content -->
                        <VerticalStackLayout x:Name="ContentArea" Spacing="10" />

                        <!-- Keywords Chips -->
                        <FlexLayout x:Name="KeywordsArea" Wrap="Wrap" Padding="0,12,0,0"
                                    JustifyContent="Start" AlignItems="Center" Direction="Row">
                        </FlexLayout>
                    </VerticalStackLayout>
                </Border>

                <!-- Action Card -->
                <Border Margin="16,0,16,16" StrokeShape="RoundRectangle 18" StrokeThickness="0.8" Padding="18,16">
                    <Border.BackgroundColor>
                        <Color>#C81A1035</Color>
                    </Border.BackgroundColor>
                    <Border.Stroke>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#30FFFFFF" Offset="0.0" />
                            <GradientStop Color="#08FFFFFF" Offset="1.0" />
                        </LinearGradientBrush>
                    </Border.Stroke>
                    <Border.Shadow>
                        <Shadow Brush="#000000" Offset="0,6" Radius="20" Opacity="0.35" />
                    </Border.Shadow>
                    <Grid ColumnDefinitions="*,Auto" ColumnSpacing="12">
                        <VerticalStackLayout VerticalOptions="Center" Spacing="4">
                            <Label Text="{Binding Title}" FontSize="15" FontAttributes="Bold" TextColor="White"
                                   MaxLines="1" LineBreakMode="TailTruncation" />
                            <Label IsVisible="{Binding HasNextLesson}"
                                   Text="{Binding NextLessonTitle, StringFormat='Next: {0} →'}"
                                   TextColor="{StaticResource Primary}"
                                   FontSize="13" Margin="0,2,0,0">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding NextLessonCommand}" />
                                </Label.GestureRecognizers>
                            </Label>
                        </VerticalStackLayout>
                        <Button Grid.Column="1"
                                Command="{Binding MarkCompleteCommand}"
                                IsEnabled="{Binding IsCompleted, Converter={StaticResource InvertedBoolConverter}}"
                                BackgroundColor="{StaticResource Primary}"
                                TextColor="White"
                                CornerRadius="16"
                                FontAttributes="Bold"
                                FontSize="14"
                                Padding="20,0"
                                HeightRequest="44">
                            <Button.Shadow>
                                <Shadow Brush="{StaticResource Primary}" Offset="0,4" Radius="12" Opacity="0.4" />
                            </Button.Shadow>
                            <Button.Triggers>
                                <DataTrigger TargetType="Button" Binding="{Binding IsCompleted}" Value="True">
                                    <Setter Property="Text" Value="Done" />
                                </DataTrigger>
                                <DataTrigger TargetType="Button" Binding="{Binding IsCompleted}" Value="False">
                                    <Setter Property="Text" Value="Mark Complete" />
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                    </Grid>
                </Border>

                <!-- Bottom spacer -->
                <BoxView HeightRequest="60" Color="Transparent" />

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
